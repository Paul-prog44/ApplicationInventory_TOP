<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title><%= title %></title>
</head>
<body>
    <h1><%= title %></h1>
    <a href="/">Back</a>
    <ul>
        <% editors.forEach((editor) => { %>
            <li  class="listElement">
                <%= editor.name %>
                <a href="/editors/delete/<%= editor.id %>"><button class="deleteButton">Delete</button></a>
                <a href="/editors/<%= editor.id %>"><button class="modifyButton">Modify</button></a>
            </li>
        <% }) %>
    </ul>
    <form action="/editors/add" method="post">
        <label for="editorName">Add an editor:</label>
        <input type="text" name="editorName" id="editorName">
        <button type="submit">Submit</button>
    </form>
</body>
</html>