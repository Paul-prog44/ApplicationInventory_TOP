<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <h1>Book: <%= title %></h1>

    <a href="/books">Back</a>

    <h3>Current informations</h3>
        <p>Title: <%= book.title %></p>
        <p>Author: <%= currentAuthor.firstname %> <%= currentAuthor.lastname %></p>
        <p>Number of pages: <%= book.pageNumber %></p>
        <p>Price: <%= book.price %> â‚¬</p>
        <p>Editor: <%= currentEditor.name %></p>
        <p>Genre: <%= currentGenre.name %></p>

    <form action="/books/modify" method="post">
        <h3>Modify</h3>
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" value="<%= book.title %>">
        <label for="pageNumber">Pages:</label>
        <input type="number" name="pageNumber" id="pageNumber" value="<%= book.pageNumber %>">
        <label for="price">Price:</label>
        <input type="number" name="price" id="price" value="<%= book.price %>">
        <label for="genre">Genre :</label>
        <select name="genre" id="genre">
            <% genres.forEach((genre) => { %>
                <option value="<%= genre.id %>"><%= genre.name %></option>
            <% }) %> 
        </select>
        <label for="editor">Editor:</label>
        <select name="editor" id="editor">
            <% editors.forEach((editor) => { %>
                <option value="<%= editor.id %>"><%= editor.name %></option>
            <% }) %>
        </select>
        <label for="author">Author:</label>
        <select name="author" id="author">
        <% authors.forEach((author) => { %>
            <option value="<%= author.id %>"><%= author.firstname %> <%= author.lastname %></option>
        <% }) %>
        </select>
        <input type="hidden" name="id" value="<%= book.id %>">
        <button type="submit">Modify</button>
    </form>
</body>
</html>